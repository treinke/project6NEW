<UserControl x:Class="GetItDone.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Name="mainControl">
    
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380*" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <TextBox Height="447" HorizontalAlignment="Left" Margin="6,28,0,0" Name="infoBox" Text="" VerticalAlignment="Top" Width="466" IsEnabled="True" FontSize="15" Opacity="5" Grid.ColumnSpan="2" />
        <Button Content="X" FontSize="15" Height="50" HorizontalAlignment="Right" Name="closeButton" Padding="0" VerticalAlignment="Top" Width="49" Grid.Column="1"  />
    </Grid>
</UserControl>
